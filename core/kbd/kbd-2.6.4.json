{
    "pkgname": "kbd",
    "version": "2.6.4",
    "sources": ["https://www.kernel.org/pub/linux/utils/kbd/kbd-2.6.4.tar.xz"],
    "patches": ["https://raw.githubusercontent.com/LearnixOS/lxos-repo/refs/heads/main/core/kbd/files/kbd-2.6.4-backspace-1.patch"],
    "build": [
        "cd kbd-2.6.4",
        "sed -i '/RESIZECONS_PROGS=/s/yes/no/' configure",
        "sed -i 's/resizecons.8 //' docs/man/man8/Makefile.in",
        "./configure --prefix=/usr --disable-vlock",
        "make",
        "make install",
        "cp -R -v docs/doc -T /usr/share/doc/kbd-2.6.4"

    ]

}
